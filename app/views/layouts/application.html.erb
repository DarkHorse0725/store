<!DOCTYPE html>
<html>
  <head>
    <title>StoreFront</title>
    <!--     ############### css ###################### -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'angular-material.min.css', 'data-turbolinks-track' => true %>
    <!--     ############### base ###################### -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <!--     ############### angular ###################### -->
    <%= javascript_include_tag "/bower_components/angular/angular.min.js" %>
    <%= javascript_include_tag "/bower_components/angular-route/angular-route.min.js" %>
    <%= javascript_include_tag "/bower_components/angular-cookies/angular-cookies.js" %>
<!--     ############### angular material ###################### -->
    <%= javascript_include_tag "/bower_components/angular-animate/angular-animate.min.js" %>
    <%= javascript_include_tag "/bower_components/angular-aria/angular-aria.min.js" %>
    <%= javascript_include_tag "/bower_components/angular-messages/angular-messages.min.js" %>
    <%= javascript_include_tag "/bower_components/angular-material/angular-material.min.js" %>
<!--     ############### controllers and factories ###################### -->
    <%= javascript_include_tag '/controllers/categoriesController.js' %>
    <%= javascript_include_tag '/controllers/productssController.js' %>
    <%= javascript_include_tag '/factories/categoriesFactory.js' %>
    <%= javascript_include_tag '/factories/productssFactory.js' %>
<!--     ############### etc ###################### -->
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
